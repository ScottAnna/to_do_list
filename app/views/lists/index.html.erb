<%= render '/layouts/navbar' %>

<h1>All Tasks</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td>
          <h3><%= list.name %> </h3>
           <%= link_to list do %><i class="glyphicon glyphicon-cloud"></i><% end %>
           <%= link_to edit_list_path(list) do %><i class="glyphicon glyphicon-pencil"></i><% end %>
           <%= render partial: 'index_list', locals: {list: list} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path %>
