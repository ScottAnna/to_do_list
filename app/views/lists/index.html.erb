<%= render '/layouts/navbar' %>

<h1>All Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td>
          <%= list.name %>
            <ul>
              <% list.tasks.each do |task| %>
                <li>
                  <%= task.order_number %>.
                  <%= task.name %>
                  <%= task.due.strftime("%b %e, %Y") %>
                </li>
              <% end %>
            </ul>
        </td>
        <td><%= link_to 'View', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path %>
