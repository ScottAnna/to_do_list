<%= render '/layouts/navbar' %>

<h1>All Tasks</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td>
          <h3><%= list.name %> </h3>
           <%= link_to list do %><i class="glyphicon glyphicon-cloud"></i><% end %>
           <%= link_to edit_list_path(list) do %><i class="glyphicon glyphicon-pencil"></i><% end %>
            <ul class="list-group">
              <% list.tasks.each do |task| %>
                <li class="list-group-item list-group-item-info">
                  <%= task.order_number %>.
                  <%= task.name %>
                  <%= task.due.strftime("%b %e, %Y") if !task.due.nil? %>
                  <button class="label label-info remove">Woo!</button>
                </li>
              <% end %>
            </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path %>
