

<p>
  <strong>Name:</strong>
  <%= @list.name %>
</p>

<p>
  <strong>Tasks:</strong>
  <ul class="list-group">
    <% @list.tasks.each do |task| %>
      <li>
        <%= task.order_number %>.
        <%= task.name %>
        <%= task.due.strftime("%b %e, %Y") if !task.due.nil? %>
      </li>
    <% end %>
  </ul>
</p>

