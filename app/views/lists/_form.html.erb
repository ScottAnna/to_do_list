<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <h2>Tasks</h2>

  <ul id="sortable">
  <%= f.fields_for :tasks do |ff| %>
    <div "fields">
        <li class="ui-state-default">
          <span class="number"><%= ff.object.order_number %>. </span>
          <span><%= ff.label :name %></span>
          <span><%= ff.text_field :name %></span>
          <span><%= ff.label :due %></span>
          <span><%= ff.date_field :due %></span>
          <span><%= ff.label :_destroy %></span>
          <span><%= ff.check_box :_destroy %></span>
          <span><%= ff.hidden_field :order_number, class: "orderNum" %></span>
        </li>
    </div>
  <% end %>
</ul>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div id="info"></div>
