<div class="login-container">
  <%= form_tag do %>
    <div class="login-email-container">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <div class="login-password-container">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <%= submit_tag "Login"%>
  <% end %>
</div>

<div class="btn btn-info">
  <%= link_to "Sign Up", new_user_path %>
</div>
